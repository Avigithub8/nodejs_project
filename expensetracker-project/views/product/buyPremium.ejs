<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Buy Premium</title>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  </head>
  <body>
    <h2>Buy Premium</h2>
    <p>Amount: INR</p>

    <button id="rzp-button1">Pay Now</button>

    <script>
      document
        .getElementById("rzp-button1")
        .addEventListener("click", async function () {
          try {
            const userId = "<%= userId %>";
            console.log("/////////", userId);
            const response = await axios.post(
              "http://localhost:3000/product/buyPremium",
              {
                userId: userId,
              }
            );

            const data = response.data;
            console.log("dfsfgd", data);
            var options = {
              key: "rzp_test_UZyDWKwD4tckHo",
              amount: data.amount,
              currency: "INR",
              name: "Yash Prasad",
              description:
                "This is amazing and a good for view detail of product",
              order_id: data.orderId,
              handler: function (response) {
                console.log(",,,,,", userId);

                // var authToken = localStorage.getItem('jwtToken');
                fetch("http://localhost:3000/product/verifyPayment", {
                  method: "POST",
                  headers: {
                    "Content-Type": "application/json",
                    // 'authorization': 'Bearer ' + authToken,
                  },
                  body: JSON.stringify({
                    paymentId: response.razorpay_payment_id,
                    orderId: data.orderId,
                    userId: userId,
                  }),
                })
                  .then(function (response) {
                    return response.json();
                  })
                  .then(function (data) {
                    if (data.success) {
                      alert("Payment successful! You are now a premium user.");
                      window.location.href="/product/addProduct/<%= userId %>";
                    } else {
                      alert("Payment failed! Please try again.");
                    }
                  })
                  .catch(function (error) {
                    console.error(error);
                    alert("Payment failed! Please try again.");
                  });
              },
              prefill: {
                name: "Yash Prasad",
                email: "prasadyash2411@gmail.com",
                contact: "7003502730",
              },
              theme: {
                color: "#3399cc",
              },
            };

            var rzp1 = new Razorpay(options);
            rzp1.open();
            
          } catch (error) {
            console.error("Error fetching Razorpay order ID:", error);
            // alert('Failed to fetch order details. Please try again.');
          }
        });
    </script>
  </body>
</html>
